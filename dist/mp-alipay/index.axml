<view class="_root {{selectable?'_select':''}}" style="{{editable?'min-height:200px;':''}}{{containerStyle}}" onTap="_containTap"><slot a:if="{{!nodes[0]}}"/><node id="_root" childs="{{nodes}}" opts="{{[lazyLoad,loadingImg,errorImg,showImgMenu,selectable,editable,placeholder,'']}}" onAdd="_add"/><view a:if="{{tooltip}}" class="_tooltip_contain" style="top:{{tooltip.top}}px"><view class="_tooltip"><view a:for="{{tooltip.items}}" a:key="index" class="_tooltip_item" data-i="{{index}}" onTap="_tooltipTap">{{item}}</view></view></view><view a:if="{{slider}}" class="_slider" style="top:{{slider.top}}px"><slider value="{{slider.value}}" min="{{slider.min}}" max="{{slider.max}}" handle-size="14" show-value activeColor="white" style="padding:10px" onChanging="_sliderChanging" onChange="_sliderChange"/></view><view a:if="{{color}}" class="_tooltip_contain" style="top:{{color.top}}px"><view class="_tooltip" style="overflow-y: hidden;"><view a:for="{{color.items}}" a:key="index" class="_color_item" style="background-color:{{item}}" data-i="{{index}}" onTap="_colorTap"></view></view></view></view>